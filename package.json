{
  "name": "polymer-starter-kit-plus",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "del": "^3.0.0",
    "eslint": "^4.1.1",
    "eslint-config-google": "^0.8.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-html": "^3.0.0",
    "eslint-plugin-prettier": "^2.1.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.3.0",
    "htmllint-cli": "^0.0.6",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.1",
    "merge-stream": "^1.0.1",
    "polymer-build": "^1.6.0",
    "prettier": "^1.5.2",
    "rehype-cli": "^3.0.0"
  },
  "scripts": {
    "build": "gulp build",
    "format": "yarn format:css && yarn format:html && yarn format:js && yarn format:json",
    "format:css": "prettier \"!(bower_components)/**/*.{css,html}\" \"*.{css,html}\" --parser postcss --single-quote --write",
    "format:html": "rehype . -o --ignore-path .gitignore",
    "format:js": "eslint . --ext js,html --ignore-path .gitignore --fix",
    "format:json": "prettier \"!(bower_components)/**/*.json\" \"*.json\" --parser json --write",
    "lint": "yarn lint:css && yarn lint:html && yarn lint:js && yarn lint:json && yarn lint:polymer",
    "lint:css": "prettier \"!(bower_components)/**/*.{css,html}\" \"*.{css,html}\" --parser postcss --single-quote --list-different",
    "lint:html": "htmllint \"**/*.html,!bower_components,!node_modules\" --rc .htmllintrc.json",
    "lint:js": "eslint . --ext js,html --ignore-path .gitignore",
    "lint:json": "prettier \"!(bower_components)/**/*.json\" \"*.json\" --parser json --list-different",
    "lint:polymer": "polymer lint",
    "test": "polymer test",
    "test:integration": "polymer build # Test that psk builds without error with the CLI.",
    "postinstall": "bower install",
    "precommit": "lint-staged",
    "serve": "polymer serve",
    "serve:all": "polymer serve -H 0.0.0.0 # Serve on all IPv4 addresses on the local machine.",
    "watch": "gulp watch"
  },
  "lint-staged": {
    "*.css": ["yarn format:css", "git add"],
    "*.html": ["yarn format:html", "git add"],
    "*.js": ["yarn format:js", "git add"],
    "*.json": ["yarn format:json", "git add"]
  }
}
